<div class="wrapper">
  <div class="header">
    <div class="header_side"></div>
    <div class="title">
      <h1>FlaringBlog</h1>
    </div>
    <div class="header_side">
      <div class="right_actions">
        <%= link_to "New Post", post_post_path, class: "button_action button_create_post" %>
        <%= link_to "Logout", feed_logout_path, method: :post, class: "button_action button_logout" %>
        <%= label_tag("user_name", @user_name, class: "user_name") %>
        <%= image_tag(@user_avatar, class: "user_avatar") %>
      </div>
    </div>
  </div>

  <div class="posts" id="content">
    <% @posts.each do |post| %>
      <div class="post-card">
        <div class="container_creator">
          <%= image_tag(post.creator_image) %>
          <p><%= post.creator_name %></p>
        </div>
        <%= image_tag(post.image, class: "image") %>
        <div class="container_post_bottom">
          <div class="container_likes">
            <%= link_to image_tag(post.like_image(session[:user_id]), border: 0), post_like_path(:post_id => post.id), method: :post, class: "feed_like_image" %>
            <p class="feed_likes_count"><%= post.format_likes_count %></p>
          </div>
          <div class="container_message">
            <p><%= post.message %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>