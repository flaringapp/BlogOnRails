<div class="wrapper">
  <div class="header">
    <div class="header_side">
      <%= link_to "Back", feed_feed_path, class: "button_action button_back" %>
    </div>
    <div class="title">
      <h1>FlaringBlog</h1>
    </div>
    <div class="header_side">
    </div>
  </div>

  <div class="container_new_post" id="content">
    <form method="post" action="/post/add" enctype="multipart/form-data" class="form_post">
      <%= token_tag %>

      <div class="form-group">
        <label for="image">Image</label>
        <input name="image" class="form-control media-upload" type="file" accept="image/*">
      </div>
      <div class="form-group">
        <label for="message">Message</label>
        <textarea name="message" class="form-control" cols="30" rows="10"></textarea>
      </div>
      <div class="from-group">
        <div><input type="submit" value="Create Post"></div>
      </div>
    </form>
  </div>
</div>